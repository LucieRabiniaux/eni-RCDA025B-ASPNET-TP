@model BO.Samourai


<h4>Samourai</h4>
<hr />
<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.Force)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Force)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Nom)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Nom)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Arme)
    </dt>

    @if (Model.Arme != null)
    {
        <dd>
            @Html.DisplayFor(model => model.Arme.Nom)
        </dd>
    }
    else
    {
        <dd>
            <em>Pas d'arme</em>
        </dd>
    }


    <dt>
        @Html.DisplayNameFor(model => model.ArtMartials)
    </dt>

    @if (Model.ArtMartials.Count > 0)
    {
        foreach (var artMartail in Model.ArtMartials)
        {
            <dd>
                @Html.DisplayFor(modelItem => artMartail.Nom)
            </dd>
        }
    }
    else
    {
        <dd>
            <em>Aucun</em>
        </dd>
    }


    <dt>
        @Html.DisplayNameFor(model => model.Potentiel)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Potentiel)
    </dd>


</dl>
